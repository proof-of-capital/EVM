# Network configuration - separate settings for each network
# Ethereum Mainnet
RPC_URL_MAINNET=https://your-mainnet-rpc-url-here
ETHERSCAN_API_KEY=your-mainnet-etherscan-api-key-here

# Ethereum Sepolia Testnet  
RPC_URL_SEPOLIA=https://your-sepolia-rpc-url-here

# Polygon Mainnet
RPC_URL_POLYGON=https://your-polygon-rpc-url-here

# Private key for deployment (same for all networks)
PRIVATE_KEY=your-private-key-here

# Contract constructor parameters

# Launch token address (ERC20 token that will be sold through this contract)
LAUNCH_TOKEN=0x0000000000000000000000000000000000000000

# Market maker address (authorized to trade even during restricted periods)
MARKET_MAKER_ADDRESS=0x0000000000000000000000000000000000000000

# Return wallet address (receives tokens from buybacks)
RETURN_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# Royalty wallet address (receives part of the profits)
ROYALTY_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# WETH contract addresses for each network
WETH_ADDRESS_MAINNET=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2
WETH_ADDRESS_SEPOLIA=0xfFf9976782d46CC05630D1f6eBAb18b2324d6B14
WETH_ADDRESS_POLYGON=0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270

# Lock end time (Unix timestamp when lock period ends)
# Example: 1767225600 (January 1, 2026, 00:00:00 UTC)
LOCK_END_TIME=1767225600

# Initial price per token (in wei, 18 decimals precision)
# Example: 1000000000000000000 = 1 ETH per token
INITIAL_PRICE_PER_TOKEN=1000000000000000000

# First level token quantity (how many tokens available at first price level)
# Example: 1000000000000000000000 = 1000 tokens (if token has 18 decimals)
FIRST_LEVEL_TOKEN_QUANTITY=1000000000000000000000

# Price increment multiplier (per 1000, so 50 = 5% increase per level)
# Example: 50 = 5% price increase per level
PRICE_INCREMENT_MULTIPLIER=50

# Level increase multiplier (per 1000, so 100 = 10% more tokens per level)
# Example: 100 = 10% increase in tokens per level
LEVEL_INCREASE_MULTIPLIER=100

# Trend change step (after which step the trend changes from increase to decrease)
# Example: 10 = after 10 steps, trend changes
TREND_CHANGE_STEP=10

# Level decrease multiplier after trend (per 1000, so 50 = 5% decrease)
# Example: 50 = 5% decrease in tokens per level after trend change
LEVEL_DECREASE_MULTIPLIER_AFTER_TREND=50

# Profit percentage (per 1000, so 100 = 10% profit margin)
# Example: 100 = 10% profit margin
PROFIT_PERCENTAGE=100

# Offset tokens (tokens that are pre-sold or reserved)
# Example: 0 = no offset tokens
OFFSET_TOKENS=0

# Control period (in seconds, time window for owner control after 30 days)
# Example: 86400 = 24 hours
CONTROL_PERIOD=86400

# Token support addresses for each network (usually same as WETH)
TOKEN_SUPPORT_ADDRESS_MAINNET=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2
TOKEN_SUPPORT_ADDRESS_SEPOLIA=0xfFf9976782d46CC05630D1f6eBAb18b2324d6B14
TOKEN_SUPPORT_ADDRESS_POLYGON=0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270

# Royalty profit percentage (per 1000, so 100 = 10% goes to royalty wallet)
# Must be between 1 and 1000 (0.1% to 100%)
# Example: 100 = 10% goes to royalty wallet, 90% goes to creator
ROYALTY_PROFIT_PERCENT=100

PROFIT_BEFORE_TREND_CHANGE=
DAO_ADDRESS=

# Old contract addresses (comma-separated, can be empty if no old contracts)
# Example: 0x1234...,0x5678... or leave empty
OLD_CONTRACT_ADDRESSES=

# Gas settings (optional, per network)
GAS_PRICE_MAINNET=
GAS_LIMIT_MAINNET=
GAS_PRICE_SEPOLIA=
GAS_LIMIT_SEPOLIA=
GAS_PRICE_POLYGON=
GAS_LIMIT_POLYGON=

# Deployment settings
VERIFY_CONTRACTS=true

# Proxy addresses for upgrades (set after initial deployment)
PROXY_ADDRESS_MAINNET=
PROXY_ADDRESS_SEPOLIA=
PROXY_ADDRESS_POLYGON= 